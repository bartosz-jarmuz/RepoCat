<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta name="description" content="RepoCat - Your repository catalog">
    <meta name="author" content="Bartosz Jarmuż">
    <title>@ViewData["Title"] - RepoCat</title>

    <!-- Icons-->
    <link href="~/lib/@@coreui/icons/css/coreui-icons.min.css" rel="stylesheet">
    <link href="~/lib/flag-icon-css/css/flag-icon.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/vendors/font-awesome/css/all.min.css">
    <link href="~/lib/simple-line-icons/css/simple-line-icons.css" rel="stylesheet">

    @*SelectBoxes*@
    <link href="~/vendors/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/vendors/select2/themes/select2-bootstrap4.min.css" rel="stylesheet" />

    <link href="~/vendors/regex-colorizer/themes/regexpal.css" rel="stylesheet" />

    <environment include="Development">
        <!-- Template styles -->
        <link href="~/css/style.css" rel="stylesheet">
        <link href="~/vendors/pace-progress/css/pace.css" rel="stylesheet">
        <link href="~/vendors/busy-spinner/busy-spinner.css" rel="stylesheet">
        <!-- styles tweaks -->
        <link rel="stylesheet" href="~/css/site-bundle.css">
    </environment>

    <environment exclude="Development">
        <!-- Template styles -->
        <link href="~/css/style.min.css" rel="stylesheet" asp-append-version="true">
        <link href="~/vendors/pace-progress/css/pace.min.css" rel="stylesheet" asp-append-version="true">
        <link href="~/vendors/busy-spinner/busy-spinner.min.css" rel="stylesheet" asp-append-version="true">
        <!-- styles tweaks -->
        <link href="~/css/site-bundle.min.css" rel="stylesheet" asp-append-version="true">
    </environment>

    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-lg-show bg-gray-200">

    <!-- APP-HEADER-->
    <partial name="_app-header" />
    <!-- /APP-HEADER-->

    <partial name="_CookieConsentPartial" />

    <div class="app-body">
        <div class="sidebar">

            <!-- SIDEBAR-NAV -->
            <partial name="_sidebar-nav" />
            <!-- /SIDEBAR-NAV -->

            <button class="sidebar-minimizer brand-minimizer" type="button"></button>
        </div>
        <main class="main">

            <!-- VIEW-BREADCRUMBS -->
           <partial name="_breadcrumb-menu"/>
            <!-- /VIEW-BREADCRUMBS -->

            <div class="container-fluid">

                <!-- VIEW-STYLES -->
                @RenderSection("Styles", required: false)
                <!-- /VIEW-STYLES -->

                <div class="animated fadeIn">

                    <!-- VIEW-CONTENT -->
                    @RenderBody()
                    <!-- /VIEW-CONTENT -->

                </div>

                <!-- VIEW-MODALS -->
                @RenderSection("Modals", required: false)
                <!-- /VIEW-MODALS -->

            </div>
        </main>

        @*<partial name="_aside-menu" />*@

    </div>
    <footer class="app-footer">
        <div>
            <a href="https://github.com/bartosz-jarmuz/RepoCat">RepoCat</a>
            <span>Version: </span>
            <span>@this.GetType().GetAssemblyFileVersion()</span>

            <small>&copy; 2020 Bartosz Jarmuż.</small>
        </div>
        <small class="ml-auto">
            <span>UI powered by</span>
            <a href="https://coreui.io">CoreUI</a>
        </small>
    </footer>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous">
        </script>
    </environment>

    <script src="~/lib/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/pace-progress/pace.min.js"></script>
    <script src="~/lib/perfect-scrollbar/dist/perfect-scrollbar.min.js"></script>
    <script src="~/lib/@@coreui/coreui/dist/js/coreui.min.js"></script>
    <script src="~/lib/@@coreui/coreui/dist/js/coreui.min.js"></script>
    <script src="~/vendors/select2/js/select2.full.min.js"></script>
    <script src="~/vendors/regex-colorizer/regex-colorizer.js"></script>

    <environment include="Development">
        <script src="~/js/site-bundle.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site-bundle.min.js" asp-append-version="true"></script>
    </environment>  


    <!-- VIEW-SCRIPTS -->
    @RenderSection("Scripts", required: false)
    <!-- /VIEW-SCRIPTS -->

</body>
</html>